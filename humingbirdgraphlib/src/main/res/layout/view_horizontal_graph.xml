<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pertextview1"
                style="@style/graph_y_representation_text_style" />

            <TextView
                android:id="@+id/pertextview2"
                style="@style/graph_y_representation_text_style" />

            <TextView
                android:id="@+id/pertextview3"
                style="@style/graph_y_representation_text_style" />

            <TextView
                android:id="@+id/pertextview4"
                style="@style/graph_y_representation_text_style" />

            <TextView
                android:id="@+id/pertextview5"
                style="@style/graph_y_representation_text_style" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/horizontal_bar_recyler_view"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

        </android.support.v7.widget.RecyclerView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="0dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp"
            app:strokeColor="#c8c8c8"
            app:strokeWidth="1dp">

            <!--<com.butterflybarchart.GraphCanvas-->
            <!--android:id="@+id/percential_view"-->
            <!---->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/vertical_bar_recyler_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/vertical_bar_info_recyler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_margin="8dp" />

        </android.support.design.card.MaterialCardView>

    </LinearLayout>

    <TextView
        android:id="@+id/textviewYInfo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:paddingRight="5dp"
        android:fontFamily="sans-serif"
        android:gravity="right|bottom"
        android:maxLines="2"
        android:textColor="#939393"
        android:textSize="9sp"
        android:textStyle="normal"
        tools:text="123" />
</FrameLayout>